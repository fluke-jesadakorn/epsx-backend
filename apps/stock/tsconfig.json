{
  "extends": "../../tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "outDir": "../../dist/apps/stock",
    "composite": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@epsx/common": ["../../libs/common/src"],
      "@epsx/common/*": ["../../libs/common/src/*"],
      "@apps/*": ["../../apps/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "incremental": false,
  "declaration": false,
  "tsBuildInfoFile": false,
  "sourceMap": false
}
