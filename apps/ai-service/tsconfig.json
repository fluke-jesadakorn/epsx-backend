{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "incremental": false,
  "tsBuildInfoFile": false,
  "sourceMap": false,
  "declaration": false,
  "compilerOptions": {
    "outDir": "../../dist/apps/ai-service",
    "composite": true,
    "baseUrl": "../../",
    "paths": {
      "@apps/*": ["apps/*"],
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"]
    }
  },
  "references": [
    {
      "path": "../../libs/common"
    }
  ]
}
