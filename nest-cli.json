{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": ".",
  "projects": {
    "ai-service": {
      "type": "application",
      "root": "apps/ai-service",
      "entryFile": "main",
      "sourceRoot": "apps/ai-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ai-service/tsconfig.json",
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.json",
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "exchange": {
      "type": "application",
      "root": "apps/exchange",
      "entryFile": "main",
      "sourceRoot": "apps/exchange/src",
      "compilerOptions": {
        "tsConfigPath": "apps/exchange/tsconfig.json",
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "financial": {
      "type": "application",
      "root": "apps/financial",
      "entryFile": "main",
      "sourceRoot": "apps/financial/src",
      "compilerOptions": {
        "tsConfigPath": "apps/financial/tsconfig.json",
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.json",
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "stock": {
      "type": "application",
      "root": "apps/stock",
      "entryFile": "main",
      "sourceRoot": "apps/stock/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stock/tsconfig.json",
        "watchAssets": true,
        "assets": [{ "include": "apps/scheduler/**/*", "watchAssets": true }]
      }
    },
    "scheduler": {
      "type": "application",
      "root": "apps/scheduler",
      "entryFile": "main",
      "sourceRoot": "apps/scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scheduler/tsconfig.json",
        "webpack": true,
        "assets": [{ "include": "**/*", "watchAssets": true }]
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}
