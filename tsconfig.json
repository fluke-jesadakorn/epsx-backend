{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "paths": {
      "@scheduler/*": ["apps/scheduler/src/*"],
      "@market/*": ["apps/market/src/*"],
      "gateway": ["apps/gateway/src/*"],
    }
  },
  "tsBuildInfoFile": "./dist/root.tsbuildinfo",
  "references": [
    {
      "path": "./apps/scheduler"
    },
    {
      "path": "./apps/market"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
