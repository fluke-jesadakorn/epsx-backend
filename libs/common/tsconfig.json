{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "composite": true,
    "baseUrl": "./",
    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
