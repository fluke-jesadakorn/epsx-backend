{
  "name": "epsx-backend",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"apps/**/*.ts\"",
    "start": "bun run start:all",
    "build": "nest build",
    "build:market": "nest build market",
    "build:gateway": "nest build gateway",
    "build:scheduler": "nest build scheduler",
    "start:gateway:dev": "nest start gateway --watch",
    "start:gateway": "bun dist/apps/gateway/main.js",
    "start:market:dev": "nest start market --watch",
    "start:market": "bun dist/apps/market/main.js",
    "start:scheduler:dev": "nest start scheduler --watch",
    "start:scheduler": "bun dist/apps/scheduler/main.js",
    "build:all": "bun run build:market && bun run build:gateway && bun run build:scheduler",
    "start:dev": "concurrently -n \"MARKET,GATEWAY,SCHEDULER\" -c \"blue,cyan,red\" \"bun run start:market\" \"bun run start:gateway\" \"bun run start:scheduler\"",
    "start:all": "concurrently -n \"MARKET,GATEWAY,SCHEDULER\" -c \"blue,cyan,red\" \"bun run start:market:prod\" \"bun run start:gateway:prod\" \"bun run start:scheduler:prod\"",
    "lint": "eslint '{apps}/**/*.ts' --fix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "^11.0.4",
    "@nestjs/schematics": "^11.0.1",
    "@nestjs/testing": "^11.0.10",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.10",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.10",
    "@nestjs/microservices": "^11.0.10",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/platform-express": "^11.0.10",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^11.0.4",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "firebase": "^11.3.1",
    "mongodb": "^6.13.1",
    "mongoose": "^8.10.1",
    "rxjs": "^7.8.1",
    "concurrently": "^8.2.2"
  }
}
