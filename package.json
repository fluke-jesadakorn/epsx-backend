{
  "name": "epsx-backend",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "bun run start:all",
    "build": "nest build",
    "build:common": "tsc -b libs/common",
    "build:ai": "bun build:common && tsc -b apps/ai-service",
    "build:exchange": "bun build:common && tsc -b apps/exchange",
    "build:financial": "bun build:common && tsc -b apps/financial",
    "build:gateway": "bun build:common && tsc -b apps/gateway",
    "build:stock": "bun build:common && tsc -b apps/stock",
    "start:gateway": "bun build:common && nest start gateway",
    "start:gateway:prod": "bun apps/dist/gateway/src/main.js",
    "start:ai": "bun build:common && nest start ai-service --watch",
    "start:ai:prod": "bun apps/dist/ai-service/src/main.js",
    "start:exchange": "bun build:common && nest start exchange --watch",
    "start:exchange:prod": "bun apps/dist/exchange/src/main.js",
    "start:financial": "bun build:common && nest start financial --watch",
    "start:financial:prod": "bun apps/dist/financial/src/main.js",
    "start:stock": "bun build:common && nest start stock --watch",
    "start:stock:prod": "bun apps/dist/stock/src/main.js",
    "build:all": "bun run build:ai && bun run build:exchange && bun run build:financial && bun run build:gateway && bun run build:stock",
    "start:dev": "concurrently -n \"AI,EXCHANGE,FINANCIAL,STOCK,GATEWAY\" -c \"yellow,blue,green,magenta,cyan\" \"bun run start:ai\" \"bun run start:exchange\" \"bun run start:financial\" \"bun run start:stock\" \"bun run start:gateway\"",
    "start:all": "concurrently \"bun run start:gateway:prod\" \"bun run start:ai:prod\" \"bun run start:exchange:prod\" \"bun run start:financial:prod\" \"bun run start:stock:prod\"",
    "lint": "eslint '{apps,libs}/**/*.ts' --fix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.8",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.15",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@langchain/community": "^0.3.29",
    "@langchain/openai": "^0.4.3",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/microservices": "^11.0.9",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.8",
    "@nestjs/platform-socket.io": "^11.0.8",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "firebase": "^11.3.1",
    "langchain": "^0.3.15",
    "mongodb": "^6.13.0",
    "mongoose": "^8.10.0",
    "openai": "^4.83.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1"
  }
}
