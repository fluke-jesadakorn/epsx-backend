# Global Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=epsx

# Environment
NODE_ENV=development

# Global Settings
LOG_LEVEL=debug

# Services Base Configuration
SERVICES_BASE_PORT=4000
# Each service will use SERVICES_BASE_PORT + offset:
# Gateway: 4000 (base)
# Exchange: 4100
# Stock: 4200
# Financial: 4300
# AI: 4400
# Scheduler: 4500
# Rate Limiting

GLOBAL_RATE_LIMIT=1000
RATE_LIMIT_WINDOW_MS="900000 # 15 minutes"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
