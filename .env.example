# AI Configuration
USE_LOCAL_OLLAMA=false                  # Set to 'true' to use local Ollama instead of OpenAI
OPENAI_API_KEY=your_openai_api_key_here # Required only when USE_LOCAL_OLLAMA is false

# Optional environment variables with defaults
NODE_ENV=development # Set to 'production' for deployment
HEADLESS_MODE=true   # Set to 'false' to disable headless mode for scraping
DEBUG_MODE=false     # Set to 'true' to enable debug mode
DEBUG_SLOW_MO=100    # Slowdown time in ms for debug mode

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/database

# HTTP Configuration
HTTP_MAX_RETRIES=3          # Maximum number of retry attempts for failed requests
HTTP_RETRY_DELAY=5000       # Base delay between retries in milliseconds
HTTP_TIMEOUT=10000          # Request timeout in milliseconds
HTTP_USER_AGENT=Mozilla/5.0 # Custom User-Agent string for requests

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key               # Firebase API Key
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com # Firebase Auth Domain
FIREBASE_PROJECT_ID=your_project_id                  # Firebase Project ID
FIREBASE_STORAGE_BUCKET=your_bucket.appspot.com      # Firebase Storage Bucket
FIREBASE_MESSAGING_SENDER_ID=your_sender_id          # Firebase Messaging Sender ID
FIREBASE_APP_ID=your_app_id                          # Firebase App ID
FIREBASE_MEASUREMENT_ID=your_measurement_id          # Firebase Analytics Measurement ID

# Note: For Google Cloud Run deployment:
# 1. Do not include .env file in your deployment
# 2. Configure these environment variables in the Cloud Run console
# 3. For sensitive values like OPENAI_API_KEY and Firebase keys, use Google Cloud Secret Manager
